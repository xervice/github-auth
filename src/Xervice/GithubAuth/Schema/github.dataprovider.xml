<?xml version="1.0"?>

<DataProviders
  xmlns="xervice:dataprovider-01"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="xervice:dataprovider-01 http://static.xervice.online/schema/dataprovider.schema.xsd"
>

    <DataProvider name="GithubAuthRequest">
        <DataElement name="Scope" type="string"/>
        <DataElement name="RedirectUrl" type="string"/>
        <DataElement name="State" default="''" type="string"/>
        <DataElement name="AllowSignup" default="true" type="string"/>
    </DataProvider>

    <DataProvider name="GithubAccessTokenRequest">
        <DataElement name="RedirectUrl" default="/" type="string"/>
        <DataElement name="Code" type="string"/>
        <DataElement name="State" default="''" type="string"/>
    </DataProvider>

    <DataProvider name="GithubAccessTokenResponse">
        <DataElement name="AccessToken" type="string"/>
        <DataElement name="TokenType" type="string"/>
    </DataProvider>

</DataProviders>